<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>#(title) Â· IMQ GUI</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.11/dist/tailwind.min.css">
    <link rel="stylesheet" href="/css/app.css">
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script>
        window.IMQ_CONFIG = {
            apiURL: "#(config.apiURL)",
            wsURL: "#(config.wsURL)",
            environment: "#(config.environment)",
            debugMode: #(config.debugMode)
        };
    </script>
    <script type="module" src="/js/app.js" defer></script>
</head>
<body class="min-h-screen">
    <div class="max-w-6xl mx-auto px-4 py-8 space-y-6">
        <header class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
            <div>
                <p class="text-sm uppercase tracking-[0.35em] text-sky-200">Immediate Merge Queue</p>
                <h1 class="text-3xl font-bold text-white mt-1">IMQ Control Center</h1>
            </div>
            <div class="flex items-center gap-3 text-sm text-slate-200">
                <span class="chip">
                    <span class="status-dot status-ready"></span>
                    API: #(config.apiURL)
                </span>
                <span class="chip">
                    <span class="status-dot status-checking"></span>
                    WS: #(config.wsURL)
                </span>
                <span class="chip">
                    <span class="status-dot status-pending"></span>
                    Env: #(config.environment)
                </span>
            </div>
        </header>

        <nav class="flex gap-6 border-b border-[rgba(255,255,255,0.08)] pb-2 text-slate-200 text-sm font-semibold">
            <a href="/" class="#if(title == "Dashboard"):nav-link-active#else:text-slate-400 hover:text-slate-200#endif">
                Dashboard
            </a>
            <a href="/settings" class="#if(title == "Settings"):nav-link-active#else:text-slate-400 hover:text-slate-200#endif">
                Settings
            </a>
        </nav>

        #import("content")
    </div>
</body>
</html>
